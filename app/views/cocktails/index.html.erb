<h1>Cocktails#index</h1>
<p>Find me in app/views/cocktails/index.html.erb</p>
<p id="notice"><%= notice %></p>

<h1>Cocktails</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">Name</th>
      <th colspan="3">Ingredients</th>

    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= cocktail.name %></td>
        <td><%= cocktail.ingredients.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% link_to 'New Cocktail', new_cocktail_path %>
